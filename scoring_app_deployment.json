{
    "apiVersion": "apps/v1beta1",
    "kind": "Deployment",
    "metadata": {
        "labels": {
            "purpose": "dequeue_messages_and_apply_style_transfer"
        },
        "name": "scoring-app"
    },
    "spec": {
        "replicas": 2,
        "template": {
            "metadata": {
                "labels": {
                    "app": "scoring-app"
                }
            },
            "spec": {
                "containers": [
                    {
                        "env": [
                            {
                                "name": "MOUNT_DIR",
                                "value": null
                            },
                            {
                                "name": "LB_LIBRARY_PATH",
                                "value": "$LD_LIBRARY_PATH:/usr/local/nvidia/lib64:/opt/conda/envs/py3.6/lib"
                            },
                            {
                                "name": "DP_DISABLE_HEALTHCHECKS",
                                "value": "xids"
                            },
                            {
                                "name": "STORAGE_MODEL_DIR",
                                "value": "models"
                            },
                            {
                                "name": "SUBSCRIPTION_ID",
                                "value": "43f94930-ca31-4ddc-91c2-2f1be4f0e8f3"
                            },
                            {
                                "name": "RESOURCE_GROUP",
                                "value": "cambridge"
                            },
                            {
                                "name": "REGION",
                                "value": "chinaeast2"
                            },
                            {
                                "name": "SB_SHARED_ACCESS_KEY_NAME",
                                "value": "RootManageSharedAccessKey"
                            },
                            {
                                "name": "SB_SHARED_ACCESS_KEY_VALUE",
                                "value": "GPAQrJb0ZQ64kjo4IxIbdVClyPFTEZuji4jusi5oboc="
                            },
                            {
                                "name": "SB_NAMESPACE",
                                "value": "cambridgena"
                            },
                            {
                                "name": "SB_QUEUE",
                                "value": "cambridgequ"
                            }
                        ],
                        "image": "pjh177787/cambridgesp:latest",
                        "name": "scoring-app",
                        "ports": [
                            {
                                "containerPort": 433
                            }
                        ],
                        "resources": {},
                        "volumeMounts": [
                            {
                                "mountPath": null,
                                "name": "blob"
                            }
                        ]
                    }
                ],
                "volumes": [
                    {
                        "flexVolume": {
                            "driver": "azure/blobfuse",
                            "options": {
                                "container": "cambridgesc",
                                "mountoptions": "--file-cache-timeout-in-seconds=120 --use-https=true",
                                "tmppath": "/tmp/blobfuse"
                            },
                            "readOnly": false,
                            "secretRef": {
                                "name": "blobfusecreds"
                            }
                        },
                        "name": "blob"
                    }
                ]
            }
        }
    }
}

